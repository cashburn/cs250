@greeter.s
.section .data
		inputFormat: .asciz "%s"
        input: .space 100
        progName: .asciz "** Greeter **\n"
        output: .asciz "%d"
        msg: .asciz "Good job! Just calculating now..."
.section .text
.global	main
main:
	push {ip, lr} 

    ldr r0, =progName
    bl printf

    ldr r0, =inputFormat
	ldr r1, =input
	bl scanf				//Scanf for input string
    ldr r0, =msg
    bl printf               //Prompt user for name
    mov r1, $0
    ldr r2, =input
loop:
    ldr r3, [r2]
    add r1, r1, $1
    cmp r3, $0
    bne loop



    ldr r0, =output
	ldr r1, =input
	bl printf				//Print out length""
    
    mov r0, $0              //exit code
	pop {ip, pc}

